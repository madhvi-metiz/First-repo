{% unless text_placement %}
  {%- assign text_placement = 'below' -%}
{% endunless %}
{% unless zoom %}
  {%- assign zoom = false -%}
{% endunless %}
{% if collection.empty? %}
  {% comment %}add default state for collection block in theme editor{% endcomment %}
  {% assign collection_image_url = '' %}
{% else %}
  {% if collection.image %}
    {%- assign image = collection.image -%}
  {% elsif collection.products.first %}
    {%- assign image = collection.products.first.featured_image -%}
  {% endif %}
{% endif %}
<div class="box">
  <a
    href="{% if collection.empty? %}#{% else %}{{ collection.url }}{% endif %}"
    class="{% if zoom %}zoom text-overlay{% endif %}"
  >
    <figure class="animation-label-overlay">
      {% if collection.empty? %}
        {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
        {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      {% else %}
        {% assign loading = 'lazy' %}
        {%- if forloop.index0 < 6 -%}
          {% assign loading = 'eager' %}
        {% endif %}

        <div class="card__image-wrapper" style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%">
          {% if image %}
            {{
              image
              | image_url: width: 1200
              | image_tag:
                widths: '400, 600, 800, 1200',
                sizes: '(min-width: 780px) 400px, 200px',
                loading: loading,
                class: 'card__image'
            }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'card__image' }}
          {% endif %}
        </div>
      {% endif %}
      {% if text_placement == 'over' %}
        <figcaption>
          <h4>
            {% if collection.empty? %}
              {{ 'homepage.onboarding.collection_title' | t }}
            {% else %}
              {{ collection.title }}
            {% endif %}
          </h4>
        </figcaption>
      {% endif %}
    </figure>
  </a>
  {% if text_placement == 'below' %}
    <figcaption class="below">
      <h3>
        {% if collection.empty? %}
          <a href="#">{{ 'homepage.onboarding.collection_title' | t }}</a>
        {% else %}
          <a href="{{ collection.url }}">{{ collection.title }}</a>
        {% endif %}
      </h3>
    </figcaption>
  {% endif %}
</div>
