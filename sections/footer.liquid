<div data-section-id="{{ section.id }}" data-section-type="footer-section">
  <footer class="site-footer">
    <h2 class="visually-hidden">Footer</h2>
    <div class="wrapper">
      <div class="grid">
        {% for block in section.blocks %}
          {%- capture box_classes -%}box box-{{ forloop.index }} {% if forloop.first == true %}box-first{% endif %} {% if forloop.last == true %}box-last{% endif %} layout-{{ section.blocks.size }}{%- endcapture -%}
          {% comment %}
            Menu column
          {% endcomment %}
          {% if block.type == 'menu' %}
            <div
              class="{{ box_classes }} menu"
              role="navigation"
              {%- if block.settings.title != blank -%}
                aria-labelledby="nav-{{ block.settings.title | handle }}"
              {%- else -%}
                aria-label="{{ linklists[block.settings.footer_linklist].title }}"
              {%- endif -%}
              {{ block.shopify_attributes }}
            >
              {% if block.settings.title != blank %}
                <div id="nav-{{ block.settings.title | handle }}" class="footer-heading">
                  {{ block.settings.title | escape }}
                </div>
              {% endif %}
              {% if block.settings.text != blank %}
                <p>{{ block.settings.text | escape }}</p>
              {% endif %}
              <ul
                {% if linklists[block.settings.footer_linklist].levels > 1 %}
                  class="nested-menu"
                {% endif %}
              >
                {% for link in linklists[block.settings.footer_linklist].links %}
                  <li class="{% if link.active %}active {% endif %}{% if link.links != blank %}has-dropdown {% endif %}">
                    <a
                      href="{{ link.url }}"
                      {% if link.links != blank %}
                        aria-haspopup="true" aria-expanded="false"
                      {% endif %}
                    >
                      {{- link.title | escape -}}
                    </a>
                    {% if link.links != blank %}
                      <ul class="dropdown" aria-hidden="true">
                        {% comment %}
                          sub_link - Second level menu
                        {% endcomment %}
                        {% for sub_link in link.links %}
                          <li class="{% if sub_link.active %}active {% endif %}{% if sub_link.links != blank %}has-sub-dropdown {% endif %}">
                            <a
                              href="{{ sub_link.url }}"
                              tabindex="-1"
                              {% if sub_link.links != blank %}
                                aria-haspopup="true" aria-expanded="false"
                              {% endif %}
                            >
                              {{- sub_link.title | escape -}}
                            </a>
                            {% if sub_link.links != blank %}
                              <ul class="sub-dropdown" aria-hidden="true">
                                {% comment %}
                                  sub_sub_link - Third level menu
                                {% endcomment %}
                                {% for sub_sub_link in sub_link.links %}
                                  <li class="sub-dropdown-item {% if sub_sub_link.active %}active {% endif %}">
                                    <a href="{{ sub_sub_link.url }}" tabindex="-1">{{ sub_sub_link.title | escape }}</a>
                                  </li>
                                {% endfor %}
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
              {% if block.settings['title-secondary'] != blank %}
                <div class="sec-footer footer-heading" id="nav-{{ block.settings.title-secondary | handle }}">
                  {{ block.settings['title-secondary'] | escape }}
                </div>
              {% endif %}
              {% if block.settings['text-secondary'] != blank %}
                <p>{{ block.settings['text-secondary'] | escape }}</p>
              {% endif %}
              {% if block.settings.show_socials %}
                {% include 'social-icons' %}
              {% endif %}
            </div>
          {% endif %}

          {% comment %}
            Newsletter column
          {% endcomment %}
          {% if block.type == 'newsletter' %}
            <div class="{{ box_classes }} newsletter" {{ block.shopify_attributes }}>
              <div class="offer-message">
                {% if block.settings.title != blank %}
                  <div class="footer-heading">{{ block.settings.title | escape }}</div>
                {% endif %}
                {% if block.settings.text_richtext != blank %}
                  <div class="rte">{{ block.settings.text_richtext }}</div>
                {% endif %}
              </div>
              <div class="offer-email">
                {% include 'newsletter-subscribe', subscribe_source: 'footer' %}
              </div>
            </div>
          {% endif %}

          {% comment %}
            Contact and social column
          {% endcomment %}
          {% if block.type == 'contact' %}
            <div class="{{ box_classes }} social" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <div class="footer-heading">{{ block.settings.title | escape }}</div>
              {% endif %}
              {% if block.settings.show_contact %}
                <p>
                  {% if block.settings.phone != blank %}
                    <span class="phone">{{ block.settings.phone | escape }}</span>
                  {% endif %}
                  {% if block.settings.phone != blank and block.settings.contact_text != blank %}&bull;{% endif %}
                  {% if block.settings.contact_text != blank %}
                    {% if block.settings.contact_link != blank %}
                      <a class="contact" href="{{ block.settings.contact_link }}">
                        {{- block.settings.contact_text | escape -}}
                      </a>
                    {% else %}
                      <span class="contact">{{ block.settings.contact_text | escape }}</span>
                    {% endif %}
                  {% endif %}
                </p>
              {% endif %}
              {% if block.settings.address != blank %}
                <div class="richtext rte content">
                  {{ block.settings.address }}
                </div>
              {% endif %}
              {% if block.settings.show_social %}
                {% include 'social-icons' %}
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.show_payment_icons %}
        <div class="box payment-types">
          {% comment %}
            Loop through available payment methods and show their icons.
          {% endcomment %}
          {% unless shop.enabled_payment_types == empty %}
            <p>{{ 'layout.footer.accepted_payments' | t }}</p>
            <ul>
              {% for type in shop.enabled_payment_types %}
                {%- assign icon_class = 'payment-icon payment-icon--' | append: type -%}
                <li>
                  {{ type | payment_type_svg_tag: class: icon_class }}
                </li>
              {% endfor %}
            </ul>
          {% endunless %}
        </div>
      {% endif %}

      {% if section.settings.trust_badge or section.settings.trust_richtext != blank %}
        <div class="box trust-badge">
          {% if section.settings.trust_richtext != blank %}
            <div class="rte">{{ section.settings.trust_richtext }}</div>
          {% endif %}
          {% if section.settings.trust_badge %}
            {%- assign image = section.settings.trust_badge -%}

            {% if image %}
              {{
                image
                | image_url: width: 1200
                | image_tag:
                  widths: '400, 600, 800, 1200',
                  sizes: '(min-width: 780px) 400px, 200px',
                  loading: loading,
                  class: 'trust-badge--image'
              }}
            {% endif %}
            <style>
              {%- if image.width >= 600 -%}
                footer.site-footer .trust-badge--image { width: 600px; }
              {%-else -%}
                footer.site-footer .trust-badge--image { width: {{ image.width }}px; }
              {%- endif -%}
            </style>
          {% endif %}
        </div>
      {% endif %}

      <p class="copyright">
        &copy; {{ 'now' | date: '%Y' }},
        <a href="/" aria-label="White Horse Vapor Home">White Horse Vapor Stores LLC</a>
        <br>
        <span>
          Any duplication of the works on this site is prohibited without express written consent of the copyright
          owner. All Rights Reserved.
        </span>
      </p>
    </div>
  </footer>
</div>
<script type="text/javascript" defer>
  var script_loaded = !1;
  function loadJSscripts() {
    script_loaded ||
      (void 0 !== observer && observer.disconnect(),
      void 0 !== window.yett && window.yett.unblock(),
      (script_loaded = !0),
      document.querySelectorAll('iframe[data-src], script[data-src], img[data-src]').forEach((e) => {
        (datasrc = e.dataset.src), null != datasrc && (e.src = datasrc);
      }),
      document.querySelectorAll('link[data-href]').forEach((e) => {
        (datahref = e.dataset.href), null != datahref && (e.href = datahref);
      }),
      document.querySelectorAll("script[type='text/lazyload']").forEach((e) => {
        var t = document.createElement('script');
        for (a = 0; a < e.attributes.length; a++) {
          var r = e.attributes[a];
          t.setAttribute(r.name, r.value);
        }
        (t.type = 'text/javascript'),
          (t.innerHTML = e.innerHTML),
          e.parentNode.insertBefore(t, e),
          e.parentNode.removeChild(e);
      }),
      document.dispatchEvent(new CustomEvent('asyncLazyLoad')));
  }
  var activityEvents = ['mousedown', 'mousemove', 'keydown', 'scroll', 'touchstart', 'click', 'keypress', 'touchmove'];
  activityEvents.forEach(function (e) {
    window.addEventListener(e, loadJSscripts, !1);
  });
</script>
{% schema %}
{
  "name": "Footer",
  "class": "footer",
  "max_blocks": 4,
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Checkout badge"
    },
    {
      "type": "richtext",
      "id": "trust_richtext",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "trust_badge",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_socials",
          "label": "Show Socials",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "default": "Footer menu"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Learn more about us"
        },
        {
          "type": "link_list",
          "id": "footer_linklist",
          "label": "Menu",
          "default": "footer"
        },
        {
          "type": "text",
          "id": "title-secondary",
          "label": "Text",
          "default": "Footer menu"
        },
        {
          "type": "textarea",
          "id": "text-secondary",
          "label": "Text",
          "default": "Learn more about us"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "default": "Newsletter"
        },
        {
          "type": "richtext",
          "id": "text_richtext",
          "label": "Text",
          "default": "<p>Subscribe to be the first to hear about our exclusive offers and latest arrivals.</p>"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text",
          "default": "Contact us"
        },
        {
          "type": "checkbox",
          "id": "show_contact",
          "label": "Show contact information",
          "default": true
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone number",
          "default": "1.877.555.9300"
        },
        {
          "type": "text",
          "id": "contact_text",
          "label": "Contact text"
        },
        {
          "type": "url",
          "id": "contact_link",
          "label": "Contact link"
        },
        {
          "type": "richtext",
          "id": "address",
          "label": "Address",
          "default": "<p></p>"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "label": "Show social icons",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}
