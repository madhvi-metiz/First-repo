<div class="hero location-image-banner-mb hero-video hero-{{ section.id }} section-standard no-border" data-video-id="{{ section.settings.video_url.id }}" data-section-id="{{ section.id }}" data-mobile-autoplay="{{ section.settings.mobile_autoplay }}" data-section-type="hero-video-section">
  <div class="{% if section.settings.full_width %}contain-full-width{% else %}contain-site-width{% endif %} no-padding">
    <div class="wrapper">

      <div class="featured-hero size-{{ section.settings.hero_size }}">
        <div class="content-box custom-first">
          {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading | escape }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <div class="rte contain-site-width">
              <div class="textSet align-{{ section.settings.alignment }}">
              {{ section.settings.text }}
               {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="button outline banner-btn">{{ section.settings.button_label | escape }}</a>
              {% endif %}
              </div>
            </div>
          {% endif %}
       
        </div>
        {% if section.settings.image == blank %}
          <div class="placeholder-background">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

<style>
  .grid__item .box .textContent{
        padding-top: 20px;
  }
  .textSet{
    width:528px;
  }
  .location-image-banner-mb .featured-hero .textSet a{
    font-size:15px;
    line-height:20px;
    background: #fff;
    color: #000000;
    letter-spacing: 0.5px;
    font-weight: 700;
    padding:15px 30px;
  }
  .location-image-banner-mb .featured-hero .textSet a:hover{
    color: #000000;
  }
  .banner-btn{
    padding:15px 30px;
  }
  .textSet p{
    font-size: 49px;
    line-height: 49px;
    font-weight:600;
    margin-bottom: 30px;
  }
  .textSet.align-left{
    text-align:left;
  }
  .textSet.align-center{
    text-align:center;
  }
  .textSet.align-right{
    text-align:right;
  }
  @media screen and (max-width: 768px){
    .location-image-banner-mb .featured-hero{
      display:block;
    }
    .location-image-banner-mb .textSet{
      width:100%;
      text-align:center;
    }
     .textSet p{
    font-size: 32px;
    line-height: 34px;
    font-weight:600;
    margin: 0px 10px 20px 10px;
  }
  .location-image-banner-mb .featured-hero.size-x-large{
      height:550px;
    }
  }
  {% assign overlay_alpha = section.settings.color_overlay_alpha_range | times: 0.01 %}
  .hero-{{ section.id }} .content-box {
    background-color: {{ section.settings.color_overlay | hex_to_rgba: overlay_alpha }};
    color: {{ section.settings.color_overlay_text }};
  }
  .hero-{{ section.id }} .content-box,
  .hero-{{ section.id }} .content-box h2,
  .hero-{{ section.id }} .content-box a {
    color: {{ section.settings.color_overlay_text }};
    border-color: {{ section.settings.color_overlay_text }};
  }
  .hero-{{ section.id }} .content-box a:hover,
  .hero-{{ section.id }} .content-box a:active {
    color: {{ section.settings.color_overlay_text }};
    border-color: {{ section.settings.color_overlay_text }};
  }
  {% if section.settings.image != blank %}
  @media screen and (max-width: 400px) {
    .hero-{{ section.id }} .featured-hero {
      background-image: url('{{ section.settings.image_mobile | img_url: '400x400' }}');
    }
  }
  @media screen and (min-width: 401px) and (max-width: 600px) {
    .hero-{{ section.id }} .featured-hero {
      background-image: url('{{ section.settings.image_mobile | img_url: '600x600' }}');
    }
  }
  @media screen and (min-width: 601px) and (max-width: 1024px) {
    .hero-{{ section.id }} .featured-hero {
      background-image: url('{{ section.settings.image | img_url: '1024x1024' }}');
    }
  }
  @media screen and (min-width: 1025px) {
    .hero-{{ section.id }} .featured-hero {
      background-image: url('{{ section.settings.image | img_url: '1600x1600' }}');
    }
  }
  @media screen and (min-width: 2001px) {
    .hero-{{ section.id }} .featured-hero {
      background-image: url('{{ section.settings.image | img_url: '2048x2048' }}');
    }
  }

   
    
  {% endif %}
</style>

{% schema %}
{
  "name": "Location Image overlay mb",
  "class": "hero-video-section",
  "settings": [
    {
      "type": "select",
      "id": "hero_size",
      "label": "Section height",
      "default": "medium",
      "options": [
        {
          "label": "Extra Small",
          "value": "x-small"
        },
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        },
        {
          "label": "Extra Large",
          "value": "x-large"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Expand full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "mobile_autoplay",
      "label": "Autoplay on mobile devices",
      "default": false
    },
    {
      "type": "header",
      "content": "Cover"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image for Desktop",
      "info": "1500 x 600px .jpg recommended. Displayed while video is loading and in browsers that do not support autoplay video."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image for Mobile",
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Video"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use overlay text to give your customers insight into your brand. Select background footage and text that relates to your style and story.</p>"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ]
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "color_overlay_text",
      "label": "Text",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "color_overlay",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "color_overlay_alpha_range",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Background opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Location Image overlay mb",
      "category": "Video"
    }
  ]
}
{% endschema %}

