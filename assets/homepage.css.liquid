/*============================================================================
        This file contains the above the fold css that will have to 
                  show above the fold on the home page

==============================================================================*/

.section-standard.no-border {
    border-bottom: 0px;
    padding-left: 0px;
    padding-right: 0px;
}
.contain-full-width:after {
    clear: both;
    content: "";
    display: table;
}
.slide__item {
    width: 100%;
    position: relative;
}
#shopify-section-ee655611-f1dc-4e39-a7d0-451e3051bb5e .custom-content .contain-full-width {
    padding: 0;
}
.contain-full-width {
    *zoom: 1;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding: 40px 0;
}
.slide__item-content .content-box {
    padding: 40px;
    width: 100%;
    height: 100%;
}
.slide__item-content .outer-wrapper {
    display: table;
    width: 100%;
    height: 100%;
}
.slide__item-content.align-center .inner-wrapper {
    vertical-align: middle;
}
.slide__item-content.justify-center .inner-wrapper {
    text-align: center;
}
.slide__item-content .inner-wrapper {
    display: table-cell;
    width: 100%;
}
.contain-full-width.no-padding, .contain-site-width.no-padding {
    padding-top: 0;
    padding-bottom: 0;
}
.slide__item-image {
    display: block;
    background: transparent;
    position: relative;
    z-index: 1;
    overflow: hidden;
}
.slide__item img {
    width: 100%;
    display: block;
}
.slide__item-content {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
    z-index: 2;
}
.slideshow-carousel.flickity-enabled {
    opacity: 1;
}
.flickity-enabled {
    position: relative;
}
.slideshow-carousel.flickity-enabled .slide__item {
    display: block;
}
.elf-video {
    width: 100%;
    height: 100%;
    position: absolute;
    object-fit: cover;
    z-index: 0;
    display: block;
}
.blue-item.elfbar-bg {
    position: relative;
    background-color: black;
    min-height: 300px;
    background-repeat: no-repeat;
    background-size: cover;
}
.blue-item-one {
    background: linear-gradient(130deg, #5dbce6 9%, #024bad 50%);
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    flex-direction: column;
    padding: 2em 0;
}
.blue-flex {
    display: flex;
    align-items: center;
    gap: 1em;
    min-height: 400px;
    /* justify-content: center; */
}
.blue-item-one h2, .blue-item-one .h2, .blue-item-one .section-standard header h4, .section-standard header .blue-item-one h4, .blue-item-one .section-standard header .h4, .section-standard header .blue-item-one .h4, .blue-item-one .instagram-collection header h4, .instagram-collection header .blue-item-one h4, .blue-item-one .instagram-collection header .h4, .instagram-collection header .blue-item-one .h4 {
    color: white;
    width: 100%;
    text-align: center;
}
.custom__item.custom__item-full_width {
    *zoom: 1;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
}
.custom-content-container.align-center {
    text-align: center;
}
.elf-video.mobile-only {
    position: relative;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 2em;
}
.blue-item.bg {
    background-color: #024bad;
    width: 25%;
}
.inner-blue-one {
    max-width: 600px;
    /* display: flex; */
    margin-left: auto;
    display: flex;
    flex-direction: column;
    min-height: 400px;
    align-items: center;
    justify-content: center;
}
.inner-blue-one a {
    background-color: white;
    display: block;
    width: 71%;
    margin: 1em auto;
    text-decoration: none;
    font-size: 1.5em;
    color: black;
    font-weight: bold;
    padding: 0.5em;
}
@media screen and (max-width:768px) {
    .blue-item.elfbar-bg {
        width: 90%;
        margin-top: 1em;
        height: unset !important;
    }
    .blue-item-one {
        width: 100%;
    }
    .inner-blue-one {
        margin-left: 0;
        max-width: 100%;
        height: auto;
        min-height: Unset;
    }
      .blue-flex {
        width: 100%;
        flex-direction: column-reverse;
        flex-wrap: wrap;
        gap: 0;
        background: linear-gradient(130deg, #5dbce6 9%, #024bad 50%);
    }
}
@media screen and (min-width:769px) {
.blue-item-one h2, .blue-item-one .h2, .blue-item-one .section-standard header h4, .section-standard header .blue-item-one h4, .blue-item-one .section-standard header .h4, .section-standard header .blue-item-one .h4, .blue-item-one .instagram-collection header h4, .instagram-collection header .blue-item-one h4, .blue-item-one .instagram-collection header .h4, .instagram-collection header .blue-item-one .h4 {
    font-size: 2.5em;
}
.blue-item.elfbar-bg {
    width: 25%;
}
  .inner-blue-one {
    margin-right: 2em;
}
  .slideshow {
    margin-bottom: 0em;
}
  .blue-flex {
    padding: 1em;
}
}